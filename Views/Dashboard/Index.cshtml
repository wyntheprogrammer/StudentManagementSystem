@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="m-5">Welcome to the Dashboard</h2>

<div class="m-5">
    @if (TempData["SuccessMessage"] != null)
    {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    }

</div>

<div class="d-flex flex-row justify-content-between m-5">

    <div class="bg-white d-flex flex-column align-items-center gap-3 p-3" style="width: 30%; border-radius: 5px;">
        <i class="fs-4 bi-person-badge"></i> 
        <div>Total Students</div>
        <div>@ViewBag.StudentCount</div>
    </div>



    <div class="bg-white d-flex flex-column align-items-center gap-3 p-3" style="width: 30%; border-radius: 5px;">
        <i class="fs-4 bi-journal-bookmark"></i> 
        <div>Total Course</div>
        <div>@ViewBag.CourseCount</div>
    </div>


    <div class="bg-white d-flex flex-column align-items-center gap-3 p-3" style="width: 30%; border-radius: 5px;">
        <i class="fs-4 bi-person-plus"></i> 
        <div>Total Enrollment</div>
        <div>@ViewBag.EnrollmentCount</div>
    </div>


</div>

<div class="m-5">
    <div>
  <canvas id="myChart"></canvas>
</div>

