<h2 class="m-5">Students</h2>

<div class="d-flex flex-column gap-4 m-5">

    <div class="d-flex flex-row justify-content-between">
        <div class="form-group" style="width: 50%">
            <input type="text" name="search" class="form-control" placeholder="Search by student"/>
        </div>

        <div class="form-group" style="width: 35%">
            <select class="form-select" id="gender" name="gender">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>

        <div class="bg-white d-flex justify-content-center" style="width: 10%">
            <button type="button" class="bg-white border-0">            
                <i class="bi bi-search w-auto"></i>  Search
            </button>
        </div>
    </div>

    <button type="button" class="btn btn-primary" style="width:fit-content">
        <i class="bi bi-plus"></i> Add New Student
    </button>

    <table class="table table-bordered table-striped bg-white">
        <thead>
            <tr>
                <th>ID</th>
                <th>Image</th>
                <th>Name</th>
                <th>Birthday</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Enrolled In</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td class="text-center">
                    <a type="button" 
                          class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                    <button type="button"  
                        class="btn btn-danger"><i class="bi bi-trash-fill"></i></button>
                </td>
            </tr>
        </tbody>
    </table>
</div>





