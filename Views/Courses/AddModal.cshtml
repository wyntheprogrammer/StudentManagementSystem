@{
    Layout = null;
}

@model StudentManagementSystem.Models.Courses

<!-- Add Modal -->
<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="addForm" asp-action="AddCourse" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLabel">Add Course</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-column gap-2">
                    <div class="form-group">
                        <label asp-for="Course"></label>
                        <input type="text" asp-for="Course" class="form-control" required/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input type="text" asp-for="Description" class="form-control" required/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Duration"></label>
                        <input type="number" asp-for="Duration" class="form-control" required/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Instructor"></label>
                        <input type="text" asp-for="Instructor" class="form-control" required/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Level"></label>
                        <select asp-for="Level" class="form-select" id="level" name="level" required>
                            <option value="">Select level</option>
                            <option value="Beginner">Beginner</option>
                            <option value="Intermediate">Intermediate</option>
                            <option value="Advanced">Advanced</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Fee"></label>
                        <input type="number" asp-for="Fee" class="form-control" required/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary w-100">Add Student</button>
                </div>
            </form>
        </div>
    </div>
</div>
